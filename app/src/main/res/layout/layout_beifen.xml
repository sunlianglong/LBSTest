<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <TextView
        android:id="@+id/t0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="您当前的订单信息："
        android:textSize="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"

        android:layout_below="@+id/t0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/usertwo"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:text="18875143259"
            android:textSize="17dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/t2"
            android:drawableLeft="@drawable/begin"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="17dp"
            android:layout_below="@id/t1"
            android:text="开始时间"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/t3"
            android:layout_below="@id/t2"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:drawableLeft="@drawable/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在时间"
            android:textSize="17dp"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/t4"
            android:layout_below="@id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费用总计"
            android:textSize="17dp"
            android:drawableLeft="@drawable/cost"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/t5"
            android:layout_below="@id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textSize="17dp"
            android:drawableLeft="@drawable/didian"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:text="支付"
        android:layout_below="@+id/login_div"
        android:layout_centerHorizontal="true" />
</RelativeLayout>